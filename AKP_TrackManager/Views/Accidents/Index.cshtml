@model IEnumerable<AKP_TrackManager.Models.Accident>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Accident</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccidentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Severity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnyoneInjured)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccidentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Severity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnyoneInjured)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.AccidentId">Details</a> 
                @if(User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.AccidentId">Edit</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.AccidentId">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
