@model AKP_TrackManager.Models.DTO.AccidentCarMemberDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Accident</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Accident Date
        </dt>
        <dd class = "col-sm-10">
            @Model.AccidentDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Severity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Severity)
        </dd>
        <dt class = "col-sm-2">
            Someone Injured
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnyoneInjured)
        </dd>
        <dt class="col-sm-2">
            Email Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            Registration Plate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegPlate)
        </dd>
    </dl>
</div>
<div>    
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>
