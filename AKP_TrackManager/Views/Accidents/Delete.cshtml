@model AKP_TrackManager.Models.DTO.AccidentCarMemberDto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this Accident?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Accident Date
        </dt>
        <dd class = "col-sm-10">
            @Model.AccidentDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            Severity
        </dt>
        <dd class = "col-sm-10">
            @Model.Severity
        </dd>
        <dt class = "col-sm-2">
        Someone Injured
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnyoneInjured)
        </dd>
        <dt class="col-sm-2">
            Email Address
        </dt>
        <dd class="col-sm-10">
            @Model.EmailAddress
        </dd>
        <dt class="col-sm-2">
            Registration Plate
        </dt>
        <dd class="col-sm-10">
            @Model.RegPlate
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AccidentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
