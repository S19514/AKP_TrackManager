@model AKP_TrackManager.Models.DTO.AccidentCarMemberDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1>New Accident</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccidentDate" class="control-label">Accident Date</label>
                <input asp-for="AccidentDate" type="date" class="form-control" />
                <span asp-validation-for="AccidentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Severity" class="control-label"></label>
                <input asp-for="Severity" class="form-control" max="10" min="1" />
                <span asp-validation-for="Severity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AnyoneInjured" /> Someone Injured
                </label>
            </div>
                <div class="form-group">
                    <label asp-for="MemberId" class="control-label">Email Address</label>
                    <select asp-for="MemberId" class="form-control" asp-items="ViewBag.EmailAddress"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CarId" class="control-label">Registration Plate</label>
                    <select asp-for="CarId" class="form-control" asp-items="ViewBag.RegPlate"></select>
                </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

