@model IEnumerable<AKP_TrackManager.Models.Lap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeasuredTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbsoluteTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingTraining)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeasuredTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PenaltyTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsoluteTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingTraining.TrainingId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LapId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LapId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LapId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
