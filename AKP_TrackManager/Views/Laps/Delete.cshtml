@model AKP_TrackManager.Models.DTO.MemberCarOnLapDto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Lap?</h3>
<div>   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Measured Time
        </dt>
        <dd class="col-sm-10">
            @Model.MeasuredTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class="col-sm-2">
            Penalty Time
        </dt>
        <dd class="col-sm-10">
            @Model.PenaltyTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class="col-sm-2">
            Absolute Time
        </dt>
        <dd class="col-sm-10">
            @Model.AbsoluteTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class="col-sm-2">
            Training Date
        </dt>
        <dd class="col-sm-10">
            @Model.TrainingDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            Training Location
        </dt>
        <dd class="col-sm-10">
            @Model.TrainingLocationString
        </dd>
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @String.Join(" ",Model.Name,Model.Surname)
        </dd>
        <dt class="col-sm-2">
            Car
        </dt>
        <dd class="col-sm-10">
            @String.Join(" ",Model.Make,Model.Model,Model.RegPlate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LapId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
