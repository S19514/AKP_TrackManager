@model AKP_TrackManager.Models.DTO.MemberCarOnLapDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Lap</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Measured Time
        </dt>
        <dd class = "col-sm-10">
            @Model.MeasuredTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class = "col-sm-2">
            Penalty Time
        </dt>
        <dd class = "col-sm-10">
            @Model.PenaltyTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class = "col-sm-2">
            Absolute Time
        </dt>
        <dd class = "col-sm-10">
            @Model.AbsoluteTime.ToString("mm':'ss':'ff")
        </dd>
        <dt class = "col-sm-2">
            Training Date
        </dt>
        <dd class = "col-sm-10">
            @Model.TrainingDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            Training Location
        </dt>
        <dd class="col-sm-10">
            @Model.TrainingLocationString
        </dd>
        <dt class="col-sm-2">
            Member 
        </dt>
        <dd class="col-sm-10">
            @String.Join(" ",Model.Name,Model.Surname)
        </dd>
              <dt class = "col-sm-2">
            Car
        </dt>
        <dd class = "col-sm-10">
            @String.Join(" ",Model.Make,Model.Model,Model.RegPlate)
        </dd>
    </dl>
</div>
<div>    
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
