@model IEnumerable<AKP_TrackManager.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New Car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                Engine Capacity(CCM)
            </th>
            <th>
                Engine Power(HP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngingeCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnginePower)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegPlate)
                </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CarId">Edit</a> 
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.CarId">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CarId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
