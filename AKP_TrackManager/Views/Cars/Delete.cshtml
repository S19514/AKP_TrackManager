@model AKP_TrackManager.Models.Car

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Are you sure you want to delete this Car?</h3>
<h4>All related data to this car will be also deleted(Laps,Accidents).</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Engine Capacity(CCM)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EngingeCapacity)
        </dd>
        <dt class = "col-sm-2">
            Engine Power(HP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnginePower)
        </dd>
        <dt class="col-sm-2">
            Registration Plate
        </dt>
        <dd class="col-sm-10">
            @Model.RegPlate
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Delete" class="btn btn-danger"/> 
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
