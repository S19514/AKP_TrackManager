@model AKP_TrackManager.Models.training
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Training Details</h1>
   
        <form>
    <p>
            <a asp-action="SingUpForTraining" asp-controller="trainings" class="btn btn-primary" asp-route-id="@Model.TrainingId">Sign For Training</a>
            @*@Html.ActionLink("Sign For Training","SignUpForTraining","trainings",Model.TrainingId)*@
        </p>
            </form>
   

<div>
    <h4>Training</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">            
            @Model.Date.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            Start Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            End Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
           Location Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationLocation.FriendlyName)
        </dd>
        <dt class = "col-sm-2">
           Preset Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrackConfigurationTrack.PresetNumber)
        </dd>
    </dl>
</div>
<div>
     @if(User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.TrainingId">Edit</a>
    }
        <a asp-action="Index">Back to List</a>
    
</div>
