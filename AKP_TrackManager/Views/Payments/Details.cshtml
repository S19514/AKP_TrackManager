@model AKP_TrackManager.Models.Payment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Payment Date
        </dt>
        <dd class = "col-sm-10">
            @Model.PaymentDate.ToString("dd.MM.yyyy")
        </dd>        
        <dt class = "col-sm-2">
            Member
        </dt>
        <dd class = "col-sm-10">
            @String.Join(" ",Model.MemberMember.Name, Model.MemberMember.Surname)
        </dd>
    </dl>
</div>
<div>    
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
