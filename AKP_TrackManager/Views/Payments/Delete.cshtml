@model AKP_TrackManager.Models.Payment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Payment Date
        </dt>
        <dd class = "col-sm-10">
            @Model.PaymentDate.ToString("dd.MM.yyyy")
        </dd>        
        <dt class = "col-sm-2">
            Member
        </dt>
        <dd class = "col-sm-10">
            @String.Join(" ",Model.MemberMember.Name, Model.MemberMember.Surname)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" href="javascript:void(0);" onclick="history.go(-1);">Back to previous page</a>
    </form>
</div>
