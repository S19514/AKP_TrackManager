@model AKP_TrackManager.Models.ClubMembership

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Club Membership and all related Payments?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Join Date
        </dt>
        <dd class = "col-sm-10">
            @Model.JoinDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            Fee Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeeAmount)
        </dd>
        <dt class = "col-sm-2">
            Member
        </dt>
        <dd class = "col-sm-10">
            @String.Join(" ",Model.MemberMember.Name, Model.MemberMember.Surname)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MembershipId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
