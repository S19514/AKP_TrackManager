@model AKP_TrackManager.Models.TrainingAttandance

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Are you sure you want to delete this Training Attendance?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Member
        </dt>
        <dd class = "col-sm-10">
          @Html.DisplayFor(model => model.MemberMember.Name) @Html.DisplayFor(model=> model.MemberMember.Surname)
        </dd class>
        <dt class = "col-sm-2">
            Training
        </dt>
        <dd class = "col-sm-10">
          @Model.TrainingTraining.Date.ToString("dd.MM.yyyy") - @Html.DisplayFor(model => model.TrainingTraining.LocationLocation.FriendlyName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TrainingAttandanceId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
         <a class="btn btn-primary" href="javascript:void(0);" onclick="history.go(-1);">Back to previous page</a>
        @*<a asp-action="Index" class="btn btn-primary">Back to List</a>*@
    </form>
</div>
